@{
    ViewBag.Title = "取回密码 —— 叟玛特";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerLayout.cshtml";
}

<div>
    <div class="cont" id="login_pane">
        <h2 class="subTitle">重置密码...</h2>
        <div class="contentArea">
            <ul>
                <li>
                    <label for="email">请输入您的Email:</label>
                    <input type="text" name="email" id="email" />
                </li>
            </ul>
            <button class="comm_btn" id="user_login" onclick="resetpwd();">重置密码</button>
        </div>
    </div>
</div>

<script type="text/javascript">
    function resetpwd() {
        $.post("/Home/ResetPwd",
            {
                email: $("#email").val()
            },
            function (result) {
                alert(result);
            });
    }
</script>
