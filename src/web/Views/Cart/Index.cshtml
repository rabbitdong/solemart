        //            if (webreturn.success)
        //                window.location.reload();
        //            else
        //                alert(webreturn.message);
        //        });
        //});
    });

    function checkout(link) {
        if ($("table.cart tbody td").size() == 0) {
            alert("购物车中没有物品");
            return;
        }
        window.location.href = "/Cart/CheckOut";
    }
</script>